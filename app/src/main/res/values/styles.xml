<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    <style name="AppRoundedImage">-->
<!--        <item name="cornerSize">10dp</item>-->
<!--    </style>-->

    <style name="AppButtonPrimary">
        <item name="android:background">@drawable/bg_button_carrot</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTextTitle.S16">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="AppTextTitle.S20">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="AppTextTitle.S24">
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="AppTextBody">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="AppTextLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="AppTextCaption">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="AppTextSecondary">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <!--  Component  -->
    <style name="App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/App.TextHeadline32</item>
    </style>

    <style name="App.Toolbar.Navigation">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <!--  Image Style  -->
    <style name="AppRoundedImage">
        <item name="cornerSize">10dp</item>
    </style>

    <!--  Text Style  -->
    <style name="App.TextHeadline32" parent="TextAppearance.Material3.HeadlineLarge" />

    <style name="App.TextHeadline24" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextTitle18" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextTitle16" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextBody16" parent="TextAppearance.Material3.BodyLarge" />

    <style name="App.TextBody12" parent="TextAppearance.Material3.BodySmall" />

</resources>
