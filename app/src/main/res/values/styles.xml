<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppRoundedImage">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="AppButtonPrimary">
        <item name="android:background">@drawable/bg_button_carrot</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTextTitle.S16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextTitle.S20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTextTitle.S24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTextBody">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTextLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="AppTextCaption">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTextSecondary">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>